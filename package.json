{
  "name": "perpo",
  "displayName": "Perplexity Copilot",
  "publisher": "MIMOMODE",
  "description": "AI-powered code completion using Perplexity API",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "perpo.enable",
        "title": "Enable Perplexity Copilot"
      },
      {
        "command": "perpo.disable",
        "title": "Disable Perplexity Copilot"
      }
    ],
    "configuration": {
      "title": "Perplexity Copilot",
      "properties": {
        "perpo.apiKey": {
          "type": "string",
          "default": "",
          "description": "Perplexity API Key"
        },
        "perpo.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable Perplexity Copilot"
        },
        "perpo.model": {
          "type": "string",
          "default": "sonar",
          "description": "Perplexity model to use"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^16.18.126",
    "@types/vscode": "^1.74.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "axios": "^1.11.0"
  }
}
