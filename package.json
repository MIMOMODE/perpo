{
  "name": "perpo",
  "displayName": "Perpo - AI Code Completion",
  "publisher": "MIMOMODE",
  "description": "AI-powered code completion using Perplexity API",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Machine Learning"
  ],
  "keywords": [
    "ai",
    "completion",
    "perplexity",
    "copilot",
    "code",
    "assistant",
    "inline",
    "suggestions"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "icon": "icon.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/MIMOMODE/perpo.git"
  },
  "homepage": "https://github.com/MIMOMODE/perpo",
  "bugs": {
    "url": "https://github.com/MIMOMODE/perpo/issues"
  },
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "contributes": {
    "commands": [
      {
        "command": "perpo.enable",
        "title": "Enable Perplexity Copilot"
      },
      {
        "command": "perpo.disable",
        "title": "Disable Perplexity Copilot"
      }
    ],
    "configuration": {
      "title": "Perplexity Copilot",
      "properties": {
        "perpo.apiKey": {
          "type": "string",
          "default": "",
          "description": "Perplexity API Key"
        },
        "perpo.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable Perplexity Copilot"
        },
        "perpo.model": {
          "type": "string",
          "default": "sonar",
          "description": "Perplexity model to use",
          "enum": [
            "sonar",
            "sonar-pro",
            "sonar-reasoning"
          ],
          "enumDescriptions": [
            "Fast and cost-effective (recommended)",
            "Enhanced capabilities",
            "Advanced reasoning (more verbose)"
          ]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/node": "^16.18.126",
    "@types/vscode": "^1.74.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "axios": "^1.11.0"
  }
}
